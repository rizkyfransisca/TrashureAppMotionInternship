<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fifthFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="25dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="94dp"
                android:background="@drawable/bg_white"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:elevation="2dp"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="52dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/blue_primary_new"
                            android:textSize="18sp"
                            android:fontFamily="@font/sfprobold"
                            android:text="Muhammad Rafif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/ivToEditAkun"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/ic_edit_akun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:weightSum="3"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="14dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/bg_profile_gray"
                    android:layout_width="match_parent"
                    android:layout_height="131dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_crown_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:text="Level"
                            android:fontFamily="@font/sfproregular"
                            android:textColor="@color/black_fourtypercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:textSize="12sp"
                            android:text="Trashure Sejati"
                            android:fontFamily="@font/sfprobold"
                            android:textColor="@color/blue_primary_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_bank_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:textSize="12sp"
                            android:text="Saldo"
                            android:fontFamily="@font/sfproregular"
                            android:textColor="@color/black_fourtypercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="17dp"
                            android:textSize="12sp"
                            android:text="Rp.150.000"
                            android:fontFamily="@font/sfprobold"
                            android:textColor="@color/blue_primary_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_trash_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:text="Total"
                            android:fontFamily="@font/sfproregular"
                            android:textColor="@color/black_fourtypercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="14.5dp"
                            android:textSize="12sp"
                            android:text="24kg"
                            android:fontFamily="@font/sfprobold"
                            android:textColor="@color/blue_primary_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="27dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="29dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Nomor HP"
                            android:textSize="12sp"
                            android:textColor="@color/black_fourtypercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="6dp"
                            android:text="08992220222"
                            android:textSize="14sp"
                            android:textColor="@color/black_eightyfivepercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="29dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:text="Email"
                            android:textSize="12sp"
                            android:textColor="@color/black_fourtypercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="6dp"
                            android:text="rafifsky@student.telkomuniversity.ac.id"
                            android:textSize="14sp"
                            android:textColor="@color/black_eightyfivepercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Tanggal lahir"
                            android:textSize="12sp"
                            android:textColor="@color/black_fourtypercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="6dp"
                            android:text="07 - Juli - 2000"
                            android:textSize="14sp"
                            android:textColor="@color/black_eightyfivepercent"
                            android:fontFamily="@font/sfproregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_marginBottom="28dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_orange_button"
                    android:text="Keluar"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="33dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"/>

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPictures"
                android:translationZ="2.028dp"
                android:layout_width="90dp"
                android:layout_marginTop="44dp"
                android:layout_height="90dp"
                android:layout_marginBottom="24dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/icon_nopic"
                app:civ_border_width="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- TODO: Update blank fragment layout -->


</androidx.constraintlayout.widget.ConstraintLayout>