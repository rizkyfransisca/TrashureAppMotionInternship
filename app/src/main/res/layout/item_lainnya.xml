<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="13dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="52dp"
            android:gravity="center"
            android:layout_height="52dp"
            android:background="@drawable/bg_btn_primary">

            <ImageView
                android:id="@+id/ivLainnya"
                android:src="@drawable/ic_daun_item_rv"
                android:layout_width="27dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvLainnyaTitle"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpromedium"
                        android:textColor="@color/black"
                        android:text="Update Trashure v1.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvLainnyaSubTitle"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/sfprolight"
                        android:textColor="@color/black"
                        android:text="Update App Trashure v1.3 kali ini merupakan ..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLainnyaDate"
                    android:textColor="#4D000000"
                    android:textSize="12sp"
                    android:fontFamily="@font/sfprolight"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-2dp"
                    android:text="20.50" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#59C4C4C4" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>